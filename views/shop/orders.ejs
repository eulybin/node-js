<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <div>
                            <li>
                                <h3>#<%= order.id %></h3>
                                <ul>
                                    <% order.products.forEach(p => { %>
                                    <li><%= p.title %> (<%= p.OrderItem.quantity %>)</li>
                                    <% }); %>
                                </ul>
                            </li>
                        </div>
                    <% }) %>
                </ul>
            <% } else { %>
                <h2>You don't have any orders yet!</h2>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>