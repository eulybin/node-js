<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <div class="orders">
                    <h1>Your Orders</h1>
                    <ul class="orders__list">
                        <% orders.forEach(order => { %>
                            <li class="order">
                                <div class="order__header">
                                    <h3 class="order__id">Order #<%= order.id %></h3>
                                    <span class="order__date"><%= new Date(order.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                </div>
                                <ul class="order__items">
                                    <% order.products.forEach(p => { %>
                                        <li class="order__item">
                                            <span class="order__item-name"><%= p.title %></span>
                                            <span class="order__item-quantity">Qty: <%= p.OrderItem.quantity %></span>
                                        </li>
                                    <% }); %>
                                </ul>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            <% } else { %>
                <div class="orders__empty">
                    <h2>You don't have any orders yet!</h2>
                    <p>Start shopping to create your first order.</p>
                </div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>