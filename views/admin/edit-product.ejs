<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (editing) { %>
            <h2 class="centered">Update Product</h2>
        <% } else { %>
            <h2 class="centered">Add Product</h2>
        <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-wrapper">
                <% if (editing) { %>
                    <input type="hidden" value="<%= product.id %>" name="productId">
                <% } %>
                <div class="form-control">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>" placeholder="Enter product title" required>
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image URL</label>
                    <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>" placeholder="https://example.com/image.jpg" required>
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>" placeholder="0.00" required>
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="5" placeholder="Enter product description" required><%= editing ? product.description : '' %></textarea>
                </div>
                <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
            </div>
        </form>
    </main>
<%- include('../includes/end.ejs') %>